{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "useAwait": "warn"
      }
    },
    "includes": [
      "**",
      "!**/.next/**",
      "!**/out/**",
      "!**/build/**",
      "!**/next-env.d.ts",
      "!**/node_modules/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "includes": [
      "**",
      "!**/.next/**",
      "!**/out/**",
      "!**/build/**",
      "!**/next-env.d.ts",
      "!**/node_modules/**"
    ]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "double"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
